<?xml version="1.0" encoding="UTF-8"?>
<application name="vue_example_plugin" xmlns="urn:com:ni:web:privilege">
    <!-- Use xml:lang to define localized descriptions. -->
    <description xml:lang="en">Example Custom Web Application written in Vue</description>
    <privileges>  
        <!-- Define a privilege that requires the users role. -->
        <privilege id="ViewResource">
            <!-- Privileges can have multiple descriptions too. -->
            <description xml:lang="en">Allows viewing the resource</description>
            <!-- Default mappings for this privilege. -->
            <role id="users"/>
        </privilege>

        <!-- Define a privilege that requires the admins role or the user alice. -->
        <privilege id="ModifyResource">
            <description xml:lang="en">Allows modifying the resource</description>
            <role id="users"/>
        </privilege>
    </privileges>
</application>
